{
  "name": "@snail/server",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "node dist/main.js",
    "start:dev": "ts-node-dev --respawn src/main.ts",
    "build": "pnpm --filter @snail/protocol build && tsc -p tsconfig.build.json && cp -r src/public dist/public",
    "lint": "eslint src --ext .ts",
    "test": "pnpm --filter @snail/protocol build && jest --passWithNoTests"
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/platform-ws": "^10.0.0",
    "@nestjs/serve-static": "^4.0.0",
    "@nestjs/websockets": "^10.0.0",
    "@snail/protocol": "workspace:*",
    "bitecs": "^0.3.40",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@types/jest": "^29.5.0",
    "@types/express": "^4.17.21",
    "@types/node": "^20.0.0",
    "@types/ws": "^8.18.1",
    "eslint": "^8.57.0",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.4.2"
  }
}
