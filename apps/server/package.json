{
  "name": "@snail/server",
  "version": "0.3.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "pnpm --filter @snail/shared build && tsx watch src/index.ts",
    "build": "pnpm --filter @snail/shared build && tsc -p tsconfig.json",
    "start": "node dist/index.js",
    "lint": "pnpm --filter @snail/shared build && tsc --noEmit -p tsconfig.json",
    "test": "pnpm --filter @snail/shared build && vitest run --passWithNoTests"
  },
  "dependencies": {
    "@colyseus/schema": "^2.0.0",
    "@snail/shared": "workspace:*",
    "colyseus": "^0.15.26",
    "cors": "^2.8.5",
    "express": "^4.21.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^22.10.5",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3",
    "vitest": "^2.1.8"
  }
}
